@model IEnumerable<EcoleApp.Models.Entity.GestionAppel.LigneAppel>

@{
    ViewData["Title"] = "Absences et retards";
}

<h2 class="fw-bold mb-4">@ViewData["Title"]</h2>

<div class="card shadow-sm">
    <div class="card-body">

        <table class="table table-striped align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Étudiant</th>
                    <th>Groupe</th>
                    <th>Date</th>
                    <th>Statut</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var l in Model)
                {
                    <tr>
                        <td>@l.Etudiant.NomComplet</td>
                        <td>@l.Appel.Seance.Groupe.Nom</td>
                        <td>@l.Appel.Seance.Date.ToString("dd/MM/yyyy")</td>
                        <td>
                            <span class="badge bg-danger">
                                @l.Statut
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="mt-3">
            <button class="btn btn-outline-primary" disabled>
                Exporter (PDF / Excel)
            </button>
        </div>

    </div>
</div>
