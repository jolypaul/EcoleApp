@using EcoleApp.Models.Entity.Auth
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Gestion Universitaire</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

    <!-- Font Awesome -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

    @RenderSection("Styles", required: false)
</head>

<body class="bg-light">

    <!-- ================= NAVBAR ================= -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                <i class="fa fa-graduation-cap me-2"></i> Gestion Universitaire
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">

                <!-- LEFT MENU -->
                <ul class="navbar-nav me-auto">
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        @if (User.IsInRole(Roles.Administrateur))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" role="button"
                                   data-bs-toggle="dropdown">
                                    <i class="fa fa-shield-halved me-1"></i> Administration
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard">Dashboard</a></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="CreateUser">Créer utilisateur</a></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="ManageRoles">Gestion des rôles</a></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Connections">Connexions actives</a></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Import">Import étudiants</a></li>
                                </ul>
                            </li>
                        }

                        @if (User.IsInRole(Roles.Responsable))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Responsable" asp-action="Dashboard">
                                    <i class="fa fa-chart-line me-1"></i> Responsable
                                </a>
                            </li>
                        }

                        @if (User.IsInRole(Roles.Delegue))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Delegue" asp-action="Dashboard">
                                    <i class="fa fa-users me-1"></i> Délégué
                                </a>
                            </li>
                        }

                        @if (User.IsInRole(Roles.Enseignant))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Seance" asp-action="Index">
                                    <i class="fa fa-calendar-days me-1"></i> Séances
                                </a>
                            </li>
                        }
                    }
                </ul>

                <!-- RIGHT MENU -->
                <ul class="navbar-nav">
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <li class="nav-item me-3">
                            <span class="navbar-text text-white">
                                <i class="fa fa-user-circle me-1"></i> @User.Identity!.Name
                            </span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-danger" asp-controller="Account" asp-action="Logout">
                                <i class="fa fa-right-from-bracket me-1"></i> Déconnexion
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Connexion</a>
                        </li>
                    }
                </ul>

            </div>
        </div>
    </nav>

    <!-- ================= CONTENT ================= -->
    <main class="container mt-4 mb-5">
        @RenderBody()
    </main>

    <!-- ================= FOOTER ================= -->
    <footer class="bg-dark text-white text-center py-3">
        <small>© @DateTime.Now.Year — Système de Gestion Universitaire</small>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
