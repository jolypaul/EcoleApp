@model IEnumerable<EcoleApp.Models.Entity.Auth.Session>

@{
    ViewData["Title"] = "Connexions actives";
}

<h2 class="fw-bold mb-4">@ViewData["Title"]</h2>

<div class="card shadow-sm">
    <div class="card-body">

        @if (!Model.Any())
        {
            <div class="alert alert-info mb-0">
                Aucune session active.
            </div>
        }
        else
        {
            <table class="table table-striped align-middle">
                <thead>
                    <tr>
                        <th>Session</th>
                        <th>Utilisateur</th>
                        <th>Début</th>
                        <th>IP</th>
                        <th>User-Agent</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in Model)
                    {
                        <tr>
                            <td>@s.SessionId</td>
                            <td>@s.UtilisateurId</td>
                            <td>@s.StartTime.ToLocalTime()</td>
                            <td>@s.RemoteIp</td>
                            <td>@s.UserAgent</td>
                            <td>
                                <form asp-action="TerminateSession" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="sessionId" value="@s.SessionId" />
                                    <button class="btn btn-sm btn-danger">
                                        Forcer déconnexion
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }

    </div>
</div>
