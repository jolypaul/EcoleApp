@{
    ViewData["Title"] = "Importer des étudiants";
}

<h2 class="fw-bold mb-4">@ViewData["Title"]</h2>

<div class="card shadow-sm">
    <div class="card-body">

        <form asp-action="Import" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label class="form-label">
                    Fichier Excel (.xlsx) : Matricule, NomComplet, Email, Filiere, Niveau, Groupe
                </label>
                <input type="file" name="file" class="form-control" accept=".xlsx" />
            </div>

            <button class="btn btn-primary">
                Importer
            </button>
        </form>

    </div>
</div>
