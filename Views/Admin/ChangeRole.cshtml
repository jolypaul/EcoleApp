@model EcoleApp.ViewModels.Admin.ChangeRoleViewModel

@{
    ViewData["Title"] = "Modifier un rôle utilisateur";
}

<h2 class="fw-bold mb-4">@ViewData["Title"]</h2>

<div class="card shadow-sm">
    <div class="card-body">

        <form asp-action="ChangeRole" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="UtilisateurId" class="form-label">Utilisateur</label>
                <select asp-for="UtilisateurId"
                        asp-items="ViewBag.Utilisateurs"
                        class="form-select">
                </select>
                <span asp-validation-for="UtilisateurId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NouveauRoleId" class="form-label">Nouveau rôle</label>
                <select asp-for="NouveauRoleId"
                        asp-items="ViewBag.Roles"
                        class="form-select">
                </select>
                <span asp-validation-for="NouveauRoleId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-warning">
                <i class="fa fa-user-shield me-1"></i> Mettre à jour
            </button>
        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
