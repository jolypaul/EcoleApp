@{
    ViewData["Title"] = "Administration";
}

<h2 class="fw-bold mb-4">@ViewData["Title"]</h2>

<div class="row g-3">

    <div class="col-md-4">
        <div class="card shadow-sm h-100">
            <div class="card-body text-center">
                <h5>Utilisateurs</h5>
                <p>Créer et gérer les utilisateurs</p>
                <a asp-action="CreateUser" class="btn btn-primary">
                    Créer utilisateur
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm h-100">
            <div class="card-body text-center">
                <h5>Rôles</h5>
                <p>Attribution et modification</p>
                <a asp-action="ChangeRole" class="btn btn-warning">
                    Modifier rôles
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm h-100">
            <div class="card-body text-center">
                <h5>Audit</h5>
                <p>Historique des actions</p>
                <a asp-controller="Audit" asp-action="Index" class="btn btn-secondary">
                    Audit
                </a>
            </div>
        </div>
    </div>

</div>
