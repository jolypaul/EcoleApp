@model EcoleApp.ViewModels.Audit.AuditListViewModel

<h2>Journal d’audit</h2>

<form method="get" class="row g-3 mb-3">
    <div class="col-md-3">
        <input name="ActeurEmail" value="@Model.Filtres.ActeurEmail"
               class="form-control" placeholder="Email acteur" />
    </div>
    <div class="col-md-3">
        <input name="Action" value="@Model.Filtres.Action"
               class="form-control" placeholder="Action" />
    </div>
    <div class="col-md-2">
        <input type="date" name="DateDebut"
               value="@(Model.Filtres.DateDebut?.ToString("yyyy-MM-dd"))"
               class="form-control" />
    </div>
    <div class="col-md-2">
        <input type="date" name="DateFin"
               value="@(Model.Filtres.DateFin?.ToString("yyyy-MM-dd"))"
               class="form-control" />
    </div>
    <div class="col-md-2">
        <button class="btn btn-primary w-100">Filtrer</button>
    </div>
</form>

<div class="mb-2">
    <a asp-action="ExportCsv"
       asp-route-debut="@Model.Filtres.DateDebut"
       asp-route-fin="@Model.Filtres.DateFin"
       class="btn btn-outline-success">
        Export CSV
    </a>
    <a asp-action="ExportPdf"
       asp-route-debut="@Model.Filtres.DateDebut"
       asp-route-fin="@Model.Filtres.DateFin"
       class="btn btn-outline-danger ms-2">
        Export PDF
    </a>

</div>

@if (!Model.Logs.Any())
{
    <div class="alert alert-info">Aucun résultat</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Acteur</th>
                <th>Action</th>
                <th>Détails</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var log in Model.Logs)
            {
                <tr>
                    <td>@log.DateAction</td>
                    <td>@log.Utilisateur?.Email</td>
                    <td>@log.Action</td>
                    <td>@log.Details</td>
                </tr>
            }
        </tbody>
    </table>
}
