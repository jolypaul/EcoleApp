@{
    ViewData["Title"] = "Responsable pédagogique";
}

<h2 class="fw-bold mb-4">@ViewData["Title"]</h2>

<div class="row g-3">

    <div class="col-md-6">
        <div class="card shadow-sm h-100">
            <div class="card-body text-center">
                <h5>Absences & retards</h5>
                <p>Consulter les présences</p>
                <a asp-controller="LigneAppel"
                   asp-action="Index"
                   class="btn btn-primary">
                    Consulter
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card shadow-sm h-100">
            <div class="card-body text-center">
                <h5>Audit</h5>
                <p>Historique des actions</p>
                <a asp-controller="Audit"
                   asp-action="Index"
                   class="btn btn-secondary">
                    Audit
                </a>
            </div>
        </div>
    </div>

</div>
